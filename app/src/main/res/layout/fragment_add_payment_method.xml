<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mywhite"
    android:orientation="vertical"
    tools:context=".AddPaymentMethod"
    android:theme="@style/AppTheme.NoActionBar">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif"
        android:text="Select Payment Method:"
        android:textColor="@color/lblColor"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"/>

    <CheckBox
        android:id="@+id/chkBankAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:buttonTint="@color/lblColor"
        android:text="Bank Account"
        android:textColor="@color/lblColor"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/chkCreditCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:buttonTint="@color/lblColor"
        android:text="Credit Card"
        android:textColor="@color/lblColor"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/chkPaypal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:buttonTint="@color/lblColor"
        android:text="PayPal"
        android:textColor="@color/lblColor"
        android:textSize="24sp"/>

    <CheckBox
        android:id="@+id/chkVenmo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:buttonTint="@color/lblColor"
        android:text="Venmo"
        android:textColor="@color/lblColor"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnNextPaymentMethod"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="111dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/btnSkipPaymentMethod"
            android:backgroundTint="@color/btnColor"
            android:fontFamily="sans-serif"
            android:text="Next"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnSkipPaymentMethod"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="25dp"
            android:backgroundTint="@color/btnColor"
            android:fontFamily="sans-serif"
            android:text="SKIP"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

</LinearLayout>
