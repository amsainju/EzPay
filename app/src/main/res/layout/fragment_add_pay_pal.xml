<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mywhite"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddPayPal">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtPaypal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/lblColor"
        app:errorEnabled="true">


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtPaypalAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/lblColor"
        app:counterTextAppearance="@color/colorAccent"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtInputPaypalAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/mygery"
            android:fontFamily="sans-serif"
            android:hint="ID Account"
            android:inputType="textEmailAddress"
            android:textColor="@color/lblColor"
            android:textColorHint="@color/lblColor"
            android:textSize="20sp"
            android:typeface="sans" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtPaypalPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/lblColor"
        app:counterTextAppearance="@color/lblColor"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/mygery">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtInputPaypalPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mygery"
            android:fontFamily="sans-serif"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/lblColor"
            android:textColorHint="@color/lblColor"
            android:textSize="20sp"
            android:typeface="sans" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtPaypalSaveAs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/lblColor"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtInputPaypalSaveAs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mygery"
            android:fontFamily="sans-serif"
            android:hint="Save As"
            android:inputType="textCapSentences"
            android:textColor="@color/lblColor"
            android:textColorHint="@color/lblColor"
            android:textSize="20sp"
            android:typeface="sans" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnAddPaypal"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="78dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/btnSkipAddPaypal"
            android:backgroundTint="@color/btnColor"
            android:fontFamily="sans-serif"
            android:onClick="addPayPalInfo"
            android:text="ADD"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/btnSkipAddPaypal"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="25dp"
            android:backgroundTint="@color/btnColor"
            android:fontFamily="sans-serif"
            android:text="SKIP"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>


</LinearLayout>